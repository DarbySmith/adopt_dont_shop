<h1>New Application</h1>

<%= form_with url: "/applications", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label :street_address %>
  <%= form.text_field :street_address %>

  <%= form.label :city %>
  <%= form.text_field :city %>

  <%= form.label :state %>
  <%= form.select :state, ["AL", "AK","AZ","AR","AS","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY"] %>

  <%= form.label :zip %>
  <%= form.number_field :zip, in: 0..99999, step: 1 %><br>

  <%= form.label :why_i_would_make_a_good_home %><br>
  <%= form.text_area :description, size: "50x5" %>

  <%= form.hidden_field :status, value: 'In Progress'  %><br>
  <%= form.submit "Submit" %>
<% end %>
  